<h1>Welcome!</h1>
<h1>Login</h1>
<% if @error %>
  <p><%= @error %></p>
<% end %>

<% if current_user %>
  <p>You're already logged in!</p>
<% else %>
  <%= form_for :sessions, url: login_path do |f| %>
    <%= f.label "Email", :email %>
    <%= f.text_field :email %>

    <%= f.label "Password", :password %>
    <%= f.password_field :password %>

    <%= f.submit"Login" %>

  <% end %>
<% end %>

<%= link_to "Sign Up", new_user_path %>
